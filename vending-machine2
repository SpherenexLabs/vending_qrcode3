<body>
    <div class="container">
        <h2>Brufen 400 Prescription</h2>

        <div class="prescription-info">
            <div class="medication-details">
                <div>
                    <strong>Medication:</strong> Brufen 400 (Ibuprofen)
                </div>
                <div>
                    <strong>Dosage:</strong> 2 tablet every day
                </div>
                <div>
                    <strong>Duration:</strong> 3 days
                </div>
                <div>
                    <strong>Quantity:</strong> 6 tablets 3rs per tablet
                </div>
                <div>
                    <strong>Total:</strong> 18Rs
                </div>
            </div>

            <p><strong>Instructions:</strong> Take with water after meals. Do not take on an empty stomach.</p>

            <p><strong>Side Effects:</strong> May cause stomach upset, heartburn, nausea, dizziness, or headache. Rare
                cases: stomach bleeding or ulcers.</p>

            <p><strong>Precautions:</strong> Not recommended for patients with stomach ulcers, kidney disease, heart
                problems, or during pregnancy. Avoid alcohol. Consult doctor if symptoms persist after 3 days.</p>
        </div>

        <button id="payButton" onclick="payNow()">Pay Now</button>

        <div id="dispenseSection" class="dispense-section">
            <h3>Payment Complete</h3>
            <p>Your payment has been processed successfully.</p>
            <p>Please collect your medication from the vending machine by clicking the button below:</p>
            <button onclick="dispenseMedicine()">Dispense Medicine</button>
        </div>

        <div id="statusMessage" class="status-message" style="display: none;"></div>
    </div>

    <script>
        // Replace this config with your actual Firebase project config
        var firebaseConfig = {
            apiKey: "AIzaSyB9ererNsNonAzH0zQo_GS79XPOyCoMxr4",
            authDomain: "waterdtection.firebaseapp.com",
            databaseURL: "https://waterdtection-default-rtdb.firebaseio.com",
            projectId: "waterdtection",
            storageBucket: "waterdtection.firebasestorage.app",
            messagingSenderId: "690886375729",
            appId: "1:690886375729:web:172c3a47dda6585e4e1810",
            measurementId: "G-TXF33Y6XY0"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        var database = firebase.database();

        function showStatus(message, isSuccess) {
            var statusElement = document.getElementById("statusMessage");
            statusElement.innerHTML = message;
            statusElement.style.display = "block";

            if (isSuccess) {
                statusElement.className = "status-message success";
            } else {
                statusElement.className = "status-message error";
            }

            // Auto-hide the message after 5 seconds
            setTimeout(function () {
                statusElement.style.display = "none";
            }, 5000);
        }

        function payNow() {
            // Disable the pay button to prevent multiple clicks
            document.getElementById("payButton").disabled = true;

            // Razorpay options
            var options = {
                "key": "rzp_test_1DP5mmOlF5G5ag", // Your Razorpay Test Key
                "amount": 1800, // Amount in paise (18 Rs = 1800 paise)
                "currency": "INR",
                "name": "Medicine Vending Machine",
                "description": "Brufen 400 - 6 tablets",
                "image": "https://example.com/your_logo.png", // Optional: Add your logo URL
                "handler": function (response) {
                    // Payment successful
                    console.log("Payment ID: " + response.razorpay_payment_id);

                    // Update Firebase with payment status
                    database.ref("Vending_Machine").update({
                        PaymentStatus: "1",
                        PaymentID: response.razorpay_payment_id,
                        PaymentTime: new Date().toISOString()
                    }).then(() => {
                        // Show success message
                        showStatus("Payment successful! Payment ID: " + response.razorpay_payment_id, true);

                        // Show the dispense section
                        document.getElementById("dispenseSection").style.display = "block";

                        // Hide the pay button
                        document.getElementById("payButton").style.display = "none";
                    }).catch((error) => {
                        // Show error message
                        showStatus("Firebase Error: " + error.message, false);

                        // Re-enable the pay button
                        document.getElementById("payButton").disabled = false;
                    });
                },
                "prefill": {
                    "name": "Patient Name",
                    "email": "patient@example.com",
                    "contact": "9999999999"
                },
                "theme": {
                    "color": "#3498db"
                },
                "modal": {
                    "ondismiss": function () {
                        // User closed the payment modal
                        showStatus("Payment cancelled by user.", false);
                        document.getElementById("payButton").disabled = false;
                    }
                }
            };

            var rzp1 = new Razorpay(options);

            rzp1.on('payment.failed', function (response) {
                // Payment failed
                showStatus("Payment Failed: " + response.error.description, false);
                document.getElementById("payButton").disabled = false;

                console.log("Error Code: " + response.error.code);
                console.log("Error Description: " + response.error.description);
                console.log("Error Source: " + response.error.source);
                console.log("Error Step: " + response.error.step);
                console.log("Error Reason: " + response.error.reason);
                console.log("Order ID: " + response.error.metadata.order_id);
                console.log("Payment ID: " + response.error.metadata.payment_id);
            });

            rzp1.open();
        }

        function dispenseMedicine() {
            // Disable the dispense button to prevent multiple clicks
            document.querySelector("#dispenseSection button").disabled = true;

            database.ref("Vending_Machine").update({
                Status: "3"
            }).then(() => {
                // Show success message
                showStatus("Medicine dispensing... Please collect your medication from the vending tray.", true);

                // After 3 seconds, show final success message
                setTimeout(function () {
                    showStatus("Dispensing complete! Thank you for using our service.", true);

                    // Disable the dispense button permanently
                    document.querySelector("#dispenseSection button").innerHTML = "Dispensed";
                    document.querySelector("#dispenseSection h3").innerHTML = "Prescription Fulfilled";
                }, 3000);
            }).catch((error) => {
                // Show error message
                showStatus("Dispensing Error: " + error.message, false);

                // Re-enable the dispense button
                document.querySelector("#dispenseSection button").disabled = false;
            });
        }
    </script>
</body>

</html>